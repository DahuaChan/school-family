<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MainActivity">

    <android.support.v4.view.ViewPager
        android:id="@+id/fragment_v"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/tabs_rg"/>

    <RadioGroup
        android:id="@+id/tabs_rg"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:background="#dcdcdc"
        android:orientation="horizontal">
        <RadioButton
            android:id="@+id/trends_tab"
            style="@style/Custom.TabRadioButton"
            android:checked="true"
            android:drawableTop="@drawable/tab_trends"
            android:text="@string/trends" />
        <RadioButton
            android:id="@+id/publish_tab"
            style="@style/Custom.TabRadioButton"
            android:drawableTop="@drawable/tab_publish"
            android:text="@string/publish" />
        <RadioButton
            android:id="@+id/message_tab"
            style="@style/Custom.TabRadioButton"
            android:drawableTop="@drawable/tab_message"
            android:text="@string/message" />
        <RadioButton
            android:id="@+id/my_tab"
            style="@style/Custom.TabRadioButton"
            android:drawableTop="@drawable/tab_my"
            android:text="@string/my" />
    </RadioGroup>
</RelativeLayout>